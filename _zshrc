# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="robbyrussell"
tmux set-option -gw mouse off
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
alias vim='/usr/local/bin/vim'
alias vi='vim'
alias l='ls -la'
alias ll='ls -la'
alias sl='ls'
alias be='bundle exec'
alias pe='plenv exec'
alias re='rbenv exec'
alias spec='rspec'
alias webserver="twistd -n web --path ."

#git周辺の設定
alias gti='git'
alias pull='git pull'
alias push='git push'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias grall='git rm $(git ls-files --deleted)'

# mac crontab
alias crontabopen='env EDITOR=nano crontab -e'

# Set to this to use case-sensitive completion
# CASE_SENSITIVE="true"


plugins=(git)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...
export PATH=$PATH:/usr/X11/lib:/usr/X11/bin
export PATH=$PATH:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin
export LSCOLORS=gxfxcxdxbxegedabagacad
# MySQL Path Setting
export PATH=$PATH:/usr/local/mysql/bin
export DYLD_LIBRARY_PATH=/usr/local/mysql/lib:$DYLD_LIBRARY_PATH

export PATH=$PATH:/usr/bin/vagrant
export PATH=/Applications/Vagrant/bin:$PATH

function peco-vim {
  vim "$( ls | peco )"
}

# nodebrew
export PATH=$HOME/.nodebrew/current/bin:$PATH

# for tag-ag (https://github.com/aykamko/tag)
if (( $+commands[tag] )); then
  tag() { command tag "$@"; source ${TAG_ALIAS_FILE:-/tmp/tag_aliases} 2>/dev/null }
  alias ag=tag
fi
alias ipython='ipython --pylab'
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
eval $(/usr/libexec/path_helper -s)

export PATH=~/Library/Python/2.7/bin:$PATH

export PATH="$HOME/.rbenv/bin:$PATH"
export RBENV_ROOT=/usr/local/var/rbenv
export PATH="$RBENV_ROOT/bin:$PATH"
eval "$(rbenv init -)"

export PATH="$PATH:`yarn global bin`"

export GOPATH="$HOME/mr-myself/projects/go"
export PATH=$GOPATH/bin:$PATH

export EDITOR=vim
